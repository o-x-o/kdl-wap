    .content{padding-top: .98rem;}
    .content>div.hot>ul{ padding-left: .1rem; box-sizing: border-box;}
    .content>div.hot>ul>li{ padding:0 .1rem; box-sizing: border-box;  float: left; margin-bottom: .2rem;}
    .content>div.hot>ul>li>a{color: #333; display: block; border: 1px solid #999; border-radius: 5px; padding: .15rem .2rem; text-align: center; font-size: .26rem;}

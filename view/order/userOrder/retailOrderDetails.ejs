<div class="content">
    <div class="hd">
        <div>
            <h5 <%if(_datas.data.status!="pePay"){%>class="cur"<%}%> id="curStatus">
        			<%if(_datas.data.status=='cancel'){%>
        				订单已取消
    				<%}else if(_datas.data.status=='hasShi'){%>
    					<%if(_datas.data.shippingMethod=="general"){%>
    						卖家已发货
    					<%}else{%>
    						等待买家收货
						<%}%>
    				<%}else{%>
    					<%=Config.message.orders.status[_datas.data.status]%>
					<%}%>
				</h5>
            <%if(_datas.data.status=="pePay"){%>
            	<p>还剩<%=_datas.data.offTime.split(':')[0]%>小时<%=_datas.data.offTime.split(':')[1]%>分自动关闭</p>
            <%}else if(_datas.data.status=="hasShi"){%>
            	<!--<p>还剩2天0小时自动确认</p>--><!-- 暂时不做-->
            <%}%>
        </div>
        <i class="iconfont meiyuan"><%if(_datas.data.status=="pePay" || _datas.data.status=="cancel" || _datas.data.status=="peShip"  || _datas.data.status=="sysAud"){%>&#xe65e;<%}else if(_datas.data.status=="hasShi" || _datas.data.status=="hasRec" || _datas.data.status=="hasCom"){%><%}%></i>
    </div>
    <!--
    <div class="Logistics more bg-white">
        <i class="iconfont">&#xe661;</i>
        <p>【南昌市】南昌转运中心 已发出</p>
        <p class="color-gray9 m-top5">2016-05-12 11:15:54</p>
    </div>
    -->
    <%if(_datas.data.shippingMethod=="general" && (_datas.data.status=="hasShi" || _datas.data.status=="hasRec" || _datas.data.status=="hasCom")){%>
	    <div class="Logistics more bg-white" onclick="this.ctrl.shipingInfoBtn('<%=_datas.data.trackingNo%>','<%=_datas.data.deliveryCorpCode%>');">
	   		<i class="iconfont">&#xe661;</i>
	    	<p>查看物流</p>
		</div>
    <%}%>
    <div class="Info bg-white info2" id="receiver">
        <i class="iconfont">&#xe616;</i>
        <p><spana>收货人：<%=_datas.data.consignee%></spana><span class="kdl-right"><%=_datas.data.phone%></span></p>
        <p>收货地址：<%=_datas.data.address%></p>
    </div>
    <%if(_datas.data.status=='payCan' && _datas.data.refundsId != null){%>
	    <div class="schedule more bg-white" onclick="this.ctrl.refundsDetails(<%=_datas.data.refundsId%>)">
    		<a href="javascript:void(0);">
    			退款进度
    		</a>
    	</div>
	<%}%>
    <!--
    <div class="hd one1">
        交易成功
        <i class="iconfont">&#xe661;</i>
    </div>
    <div class="Info bg-white one2">
        <i class="iconfont">&#xe616;</i>
        <p>收货人：张宇</p>
        <p>手机号：18600264531</p>
    </div>
    -->
    <div class="con-list">
        <div class="hd bg-white"  <%if(_datas.data.shopId!=null){%>onclick="this.ctrl.toShop(<%=_datas.data.shopId%>);"<%}%>>
            <a href="javascript:;">
                <span>
                	<%if(_datas.data.shopId!=null){%>
	                    <img src="<%=Config.imgPre+_datas.data.avatar%>"/>
                	<%}%>
                </span>
                <%=_datas.data.shopId==null?"":_datas.data.shopName+"\>"%> 
            </a>
        </div>
        <ul>
	        <%$.each(_datas.data.orderItems,function(i,orderItem){%>
	            <li  onclick="this.ctrl.toProductDetails(<%=orderItem.goodsId%>,<%=orderItem.shopId%>,<%if(orderItem.specialtyContentId==null){%>null<%}else{%><%=orderItem.specialtyContentId%><%}%>)">
	                <a href="javascript:void(0);">
	                    <div class="pic">
	                        <img src="<%=Config.imgPre+orderItem.thumbnail%>"/>
	                    </div>
	                    <div class="txt">
	                        <h6 class="color-gray6 ellips1"><%=orderItem.name%></h6>
	                        <p class="color-gray9"><%if(orderItem.skuValue==null){%><%}else{%><%=orderItem.skuValue%><%}%></p>
	                    </div>
	                    <div class="jiage">
	                        <span class="color-gray3">￥<%=orderItem.price.toFixed(2)%></span>
	                        <p class="color-gray6">x<%=orderItem.quantity%></p>
	                    </div>
	                </a>
	            </li>
	        <%})%>
        </ul>
        <%if(_datas.data.shippingMethod=="ownTake" && _datas.data.status=="hasShi" ){%>
	        <div class="totalPrice bg-white">
	            <p class="color-gray3">
	            	取货码:<%=_datas.data.takenCode.substr(0,3)%>&nbsp;<%=_datas.data.takenCode.substr(3,3)%>
	            	<cite onclick="this.ctrl.generateRetailCode(<%=_datas.data.orderId %>)" style="color:rgba(0, 0, 255, 0.71);" class="kdl-right">
	            		显示二维码
	            	</cite>
	            </p>
	            <%if(_datas.data.expiryTime!=null){%><p class="color-gray6">取货码有效期至：<%=_datas.data.expiryTime%></p><%}%>
	        </div>
	    <%}%>
        <div class="totalPrice bg-white">
            <p class="color-gray9">商品总价<cite class="kdl-right">￥<%=_datas.data.goodsPrice.toFixed(2)%></cite></p>
            <p class="color-gray9">运费(快递)<cite class="kdl-right">￥<%=_datas.data.freight.toFixed(2)%></cite></p>
            <p class="color-gray3">订单总价<cite class="kdl-right">￥<%=_datas.data.totalPrice.toFixed(2)%></cite></p>
        </div>
        <div class="Payment">
            <i></i>
            	<%if(_datas.data.status=="pePay" || _datas.data.status=="cancel"){%>需付款<cite class="kdl-right color-red">￥<%=_datas.data.payAmount.toFixed(2)%></cite><%}else{%>实付款<cite class="kdl-right color-red">￥<%=(_datas.data.payAmount+_datas.data.useBalance).toFixed(2)%></cite><%}%>
        </div>
    </div>
    <!--返积分-->
    <div class="integral m-top10">
        <ul>
            <li onclick="this.ctrl.toCallBus();">
                <a href="javascript:;">
                    <i class="iconfont color-orange" >&#xe601;</i>联系卖家
                </a>
                <!--
                <a href="javascript:;">
                    <i class="iconfont color-orange">&#xe634;</i>拨打电话
                </a>
                -->
            </li>
        </ul>
    </div>
    <div class="orderinfo m-top10 bg-white">
        <div>
            <p>订单编号：<%=_datas.data.sn%></p>
            <p>创建时间：<%=_datas.data.createDate%></p>
            <%if(_datas.data.status=="hasShi" || _datas.data.status=="hasRec" || _datas.data.status=="hasCom"){%>
	            <!--<p>付款时间：2016-05-17 10:54:22</p>-->
    	        <!--<p>发货时间：2016-05-17 10:54:22</p>-->
            <%}%>
            <%if(_datas.data.status=="hasRec"){%>
	            <p>成交时间：<%=_datas.data.receiverDate%></p>
            <%}%>
            <%if(_datas.data.status=="hasCom"){%>
	           <!--<p>成交时间：2016-05-17 10:54:22</p>-->
            <%}%>
        </div>
    </div>
</div>

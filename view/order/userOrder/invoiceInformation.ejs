<link href="../../css/base.css" rel="stylesheet"/>
<style type="text/css">
    /*发票类型*/
    .content .con-type{padding: .2rem; box-sizing: border-box; background-color: #fff;}
    .content .con-type>ul>li{ float: left; box-sizing: border-box; margin-right: .2rem;}
    .content .con-type>ul>li>a{ display:inline-block; color: #333; padding: .1rem .3rem;  border: 1px solid #e5e5e5;}
    .content .con-type>ul>li.cur>a{ border: 1px solid #f62b2d; background: url("./img/gou@2x.png")no-repeat bottom right;background-size: 20%;}
    /*发票抬头*/
    .nvoice-title{ padding: .2rem; box-sizing: border-box;}
    .nvoice-title>h5>span{font-size: .24rem;}
    .nvoice-title>input{ width: 80%; border: 1px solid #e5e5e5; height: .5rem; line-height: .5rem; color: #999; font-size: .24rem; padding: 0 .15rem; box-sizing: border-box;}
    .invoice-con{ padding: .2rem; box-sizing: border-box;}
    .invoice-con>h5>span{font-size: .24rem;}
    .invoice-con>ul>li{ height:.5rem; line-height:.5rem;}
    .invoice-con>ul>li>i{ margin-right: .1rem; color: #999;}
    .con-type>p{ display: none;}
    /*确定按钮*/
    .footer-btn{ width:100%; min-width: 320px; max-width: 640px; position: fixed; font-size: .36rem;  height: 1rem; line-height: 1rem; text-align: center; border: 0; bottom: 0;}
    .theme-popover-mask{top: 2.5rem; display: block;}
</style>
<header class="navbar navbar2">
    <div class="nav-wrap-left">
        <a href="javascript:history.go(-1);" class="color-gray3">
            <i class="iconfont">&#xe60b;</i>
            <s></s>
        </a>
    </div>
    <span class="nav-header h1 color-gray3">发票信息</span>
</header>
<div class="content">
	<input type="hidden" value="" id="inType"/>
	<input type="hidden" value="明细" id="inContent"/>
    <!--发票类型-->
    <div class="con-type">
        <h5 class=" color-gray6">发票类型</h5>
        <ul class="m-top30 clearfix">
            <li class="cur">
                <a href="javascript:;">
                    无需发票
                </a>
            </li>
            <li id="gInvoice">
                <a href="javascript:;">
                    增值税发票
                </a>
            </li>
        </ul>
        <p class="color-red m-top20">在原有金额上添加6%的税点</p>
    </div>
    <!--发票抬头-->
    <div class="nvoice-title m-top10 bg-white">
        <h5 class="color-gray6">发票抬头<span class="color-gray9">（可输入个人/单位名称）</span></h5>
        <input type="text" placeholder="个人" class="m-top20" id="inTitle">
    </div>
    <!--发票内容-->
    <div class="invoice-con bg-white m-top10">
        <h5 class="color-gray6">发票内容<span class="color-gray9">（非图书商品）</span></h5>
        <ul class="m-top10">
            <li>
                <i class="iconfont color-red">&#xe63d;</i><span>明细</span>
            </li>
            <li>
                <i class="iconfont">&#xe64f;</i><span>耗材</span>
            </li>
            <li>
                <i class="iconfont">&#xe64f;</i><span>办公用品</span>
            </li>
            <li>
                <i class="iconfont">&#xe64f;</i><span>电脑配件</span>
            </li>
        </ul>
    </div>
</div>
<div class="theme-popover-mask"></div>
<button class="footer-btn color-white bg-red" type="button" id="selInvoice">确定</button>


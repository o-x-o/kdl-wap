<style type="text/css">
    body{ padding-bottom: 0;}
    .navbar .nav-header{ color: #333;}
    .content .searchBox{border-bottom: 1px solid #e5e5e5; padding: .1rem .2rem; box-sizing: border-box; position: fixed; background-color: #fff; width: 100%; min-width: 320px;max-width: 640px; z-index: 9;}
    .content .searchBox>input{ font-size: .26rem; box-sizing: border-box; color: #999; width: 100%; border:0; border-radius: 5px; height: .6rem; line-height: .6rem; background-color: #f0f0f0; text-indent: .6rem; padding-right: .3rem;}
    .content .searchBox>i{ position: absolute; left: .3rem; top: .2rem; color: #999; font-size: .36rem;}
    .content .searchBox>span{ position: absolute; right: .3rem; top:.15rem; color: #bebebe; font-size: .38rem;}
    .content>ul{margin-top: .8rem;}
    .content>ul>li{ height: .8rem; line-height: .8rem; border-bottom: 1px solid #e5e5e5; padding-left: .2rem; box-sizing: border-box;}
    .content>ul>li>a{display: block; color: #999;}
    .content>p{ line-height: .8rem;margin-top: .8rem; text-indent: .2rem; color: #666; font-size: .28rem; background-color: #fff;}
    .selection{ overflow: hidden; margin-top: .8rem; position: relative; padding-left: 1.8rem; box-sizing: border-box;}
    .selection>ul:first-child{height: 100%;overflow-y: scroll; position: absolute; left: 0 ; top: 0; width: 30%;}
    .selection>ul:first-child>a{display: block; text-align: center;}
    .selection>ul>li{ line-height: .8rem; height: .8rem; border-bottom: 1px solid #e5e5e5;}
    .selection>ul:last-child{ background-color: #f0f0f0;}
    .selection>ul>li{ text-indent: .3rem;}
    .selection>ul>li>a{ color: #333;}
    .selection>ul>li.cur a{ color: #cc3333;}
    .selection>ul:first-child>li.cur{background-color: #f0f0f0!important;}
    .selection>ul:last-child>li{border-left: 1px solid #e5e5e5;}
    .selection>ul:last-child{ position: absolute; right: 0; width: 70%; top: 0; height: 100%; overflow-y: scroll;}
</style>

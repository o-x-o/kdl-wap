    .tit-con>ol>li>a>div.pto{width: 1.5rem; height:1.4rem; border-radius: 3px; overflow: hidden;}
    .tit-con>ol>li>a>div.pto>img{ width: 100%; height:100%;}
    .tit-con>ol>li>a>div.mask{ position: absolute; bottom: 0; width: 100%; background-color: #000; z-index: 1; opacity: 0.5; height: .45rem;}
    .tit-con>ol>li>a>p{ line-height: .5rem;position: absolute; bottom: 0; width: 100%; color: #fff; z-index: 2; text-align: center;}
    .content>h6{ position: relative; height: .4rem;border-bottom: 1px solid #e5e5e5; margin-bottom: 1.5rem;}
    .content>h6>span{ padding: 0 .2rem; background-color: #f0f0f0; position: absolute; left: 50%; margin-left: -1.1rem; top: .25rem;}
    .bottomBtn{position: fixed;bottom: 0px;width: 6.4rem;z-index: 5;}
    .bottomBtn button{border-radius:0;}

<%=REND("include/header",{_title:_title})%>

<style>
.photo-wrap{display:none;}
.content .hd{ padding:.3rem .2rem; box-sizing:border-box;}
.content .hd .pic{position:relative; width:1.6rem; height:1.6rem; border:.04rem solid #fff; border-radius:.1rem; margin:0 auto;}
.content .hd .pic>img{ width:100%; height:100%; border-radius:.1rem;}
.content .hd .pic>i{cursor:pointer; display:block; position:absolute; right:-.1rem; bottom:-.1rem; width:.6rem; height:.6rem; line-height:.6rem; text-align:center; font-size:.4rem; border-radius:50%; background-color:#FEA20A; color:#fff;}
.content .hd>p{ text-align:center; font-size:.26rem; margin-top:.1rem; position:relative;}
.content .hd>p>a{position:absolute; right:0;}
.content .bd>form>ul>li{padding:.1rem .15rem; height:.64rem; box-sizing:border-box; border-bottom:1px solid #e5e5e5; background-color:#fff;}
.content .bd>form>ul>li>input{color:#999; border:0; background:transparent; font-size:.26rem; height: .43rem; width: 6.1rem;}
</style>

<div class="content">
	<div class="form-wrap">
	    <div class="hd">
	        <div class="pic">
	            <img src="<%=Config.imgPre+_datas.shopDefaultIcon%>"/>
	            <i class="iconfont">&#xe618;</i> 
	        </div>
	        <p class="color-gray9">设置您的<%=_data.type||"店铺"%>头像</p>
	    </div>
	    <div class="bd">
	        <form action="<%=_data.submitUrl%>" call="this.ctrl.submitCall" method="post" class="form-horizontal">
	        	<input type="hidden" name="license" />
	        	<input type="hidden" name="avatar" />
	            <ul>
	                <li>
	                    <input type="text" name="shopName" placeholder="<%=_data.type||"店铺"%>名称" maxlength="15"/>
	                </li>
	                <li>
	                    <input type="text" name="shopSubTitle" placeholder="<%=_data.type||"店铺"%>副标题" maxlength="15"/>
	                </li>
	                <!--<li>
	                    <input type="text" name="shopDescription" placeholder="描述您的<%=_data.type||"店铺"%>"/>
	                </li>-->
	            </ul>
	        <div class="padding20">
	            <button type="submit" class="btn bg-warn through m-top50 h2 padding10">免费开通</button>
	        </div>
	        </form>
	    </div>
    </div>
    <%=REND("include/uploadImage",{brief:"上传营业执照正面"})%>
</div>

